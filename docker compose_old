version: "3.9"

services:
  db:
    image: postgres:16
    container_name: postgres_db
    environment:
      POSTGRES_DB: backend
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: skmfwfem
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - mynet
  django:
    container_name: django_app
    build: .
    command: gunicorn core.wsgi:application --bind 0.0.0.0:3050
    ports:
      - "3050:3050"
    env_file:
      - .env
    networks:
      - mynet
volumes:
  postgres_data:


networks:
  mynet:
    external: true
